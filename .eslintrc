{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "rules": {
    "no-console": 0,
    "no-alert": 0,
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2
  },

  "globals": {
    "window": true
  },

  "plugins": [
    "babel",
    "react",
    "import"
  ]
}
